<div class="container">
  <div class="row">
    <h1><%= @task.title %></h1>
  </div>
  <p><%= @task.details %></p>

  <%= link_to "Back to tasks", tasks_path, class: 'btn btn-primary'%>
  <%= link_to "Edit task", edit_task_path, class: 'btn btn-primary' %>

  <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?" } do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>
